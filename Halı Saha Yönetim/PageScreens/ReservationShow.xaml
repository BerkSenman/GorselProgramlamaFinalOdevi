<Page x:Class="haliSahaOdev.PageScreens.ReservationShow"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:haliSahaOdev.PageScreens"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="700"
      Title="ReservationShow"
      Background="White">

    <Grid Background="BlanchedAlmond">
        <DataGrid Name="dataGridSaha" HorizontalAlignment="Left" AutoGenerateColumns="False" Height="286" Margin="83,128,0,0" VerticalAlignment="Top" Width="516">
            <DataGrid.Columns>
                <DataGridTextColumn Binding="{Binding RezID}" Header="RezID" />
                <DataGridTextColumn Binding="{Binding SahaID}" Header="SahaID" />
                <DataGridTextColumn Binding="{Binding Tarih}" Header="Tarih" />
                <DataGridTextColumn Binding="{Binding Saat}" Header="Saat" />
                <DataGridTextColumn Binding="{Binding Durum}" Header="Durum" />
                <DataGridTextColumn Binding="{Binding Not}" Header="Not" />

            </DataGrid.Columns>
        </DataGrid>
        <Label Content="Rezervasyon Listesi" FontSize="50" Margin="122,29,10,0" VerticalAlignment="Top"  />
    </Grid>
</Page>
